<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical">


    <engineer.echo.RoundAngleFrameLayout
        android:id="@+id/frameCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="vRender"
        app:rf_radius="@dimen/circle_radius">

        <View
            android:id="@+id/tvRender"
            android:layout_width="@dimen/circle_height"
            android:layout_height="@dimen/circle_height"
            android:layout_gravity="center"
            android:background="#FF0000"
            android:visibility="visible" />
    </engineer.echo.RoundAngleFrameLayout>

    <Button
        android:id="@+id/btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Change" />
</LinearLayout>
