<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="engineer.echo.SecondActivity">

    <engineer.echo.CustomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/over_msg_txt"
            android:background="#3F51B5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/msg_txt"
                android:gravity="center"
                android:text="Release to Camera"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnScope"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Scope" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/btnScope"
                    android:text="Submit" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="800dp"
                    android:background="#FF0000" />
            </LinearLayout>
        </ScrollView>


    </engineer.echo.CustomScrollView>


</LinearLayout>
