<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FRMustardProgressBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:indeterminateDrawable">@drawable/fr_mustard_progress_circle</item>
        <item name="android:indeterminateDuration">789</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <declare-styleable name="RoundAngleFrameLayout">
        <attr name="rf_radius" format="dimension" />
        <attr name="rf_topLeftRadius" format="dimension" />
        <attr name="rf_topRightRadius" format="dimension" />
        <attr name="rf_bottomLeftRadius" format="dimension" />
        <attr name="rf_bottomRightRadius" format="dimension" />
    </declare-styleable>


    <style name="AppTran" parent="AppTheme">
        <item name="android:windowSharedElementEnterTransition">@transition/shared_element</item>
    </style>

    <declare-styleable name="PlayTransition">
        <attr name="colorCT" format="color"/>
    </declare-styleable>
</resources>
