<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#00FF00" />

        <echo.engineer.oneactivity.widget.ClipView
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_retrofit_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_retrofit_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Weather" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/vShadow"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#FA2855" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#FA2855" />

    </LinearLayout>

    <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        shadow:z_depth="z_depth3"
        shadow:z_depth_paddingLeft="z_depth5"
        shadow:z_depth_paddingRight="z_depth5"
        shadow:z_depth_paddingTop="z_depth5"
        shadow:z_depth_doAnim="false"
        shadow:z_depth_shape="rect">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Change ZDepth" />

    </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>


</LinearLayout>